                <div class="stat-value">{{stats.diskUsage}}</div>
                <p>Espacio utilizado</p>
            </div>
            <div class="stat-card">
                <h3>Archivos</h3>
                <div class="stat-value">{{stats.fileCount}}</div>
                <p>Total de archivos</p>
            </div>
            <div class="stat-card">
                <h3>Directorios</h3>
                <div class="stat-value">{{stats.dirCount}}</div>
                <p>Total de carpetas</p>
            </div>
        </div>
    </section>

    <section>
        <h2>Información del Servidor</h2>

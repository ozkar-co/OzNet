<article>
    <header>
        <h1>Dashboard de Servicios</h1>
        <p>Estado de todos los servicios de OzNet</p>
    </header>

    <section>
        <h2>Servicios</h2>
        <table role="grid">
            <thead>
                <tr>
                    <th>Servicio</th>
                    <th>Dominio</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                {{#each services}}
                <tr>
                    <td><strong>{{name}}</strong></td>
                    <td>{{domain}}</td>
                    <td>
                        <span class="status-{{status}}">
                            {{#if (eq status 'running')}}
                                ✅ Activo
                            {{else if (eq status 'stopped')}}
                                ❌ Detenido
                            {{else}}
                                ⚠️ Error
                            {{/if}}
                        </span>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
</article> 
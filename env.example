# OzNet Environment Configuration
# Copy this file to .env and modify the values as needed

# Server Configuration
PORT=3000
NODE_ENV=production

# File Server Configuration
FILES_ROOT=/var/oznet/files
MAX_FILE_SIZE=104857600

# Network Configuration
ZEROTIER_NETWORK_ID=9bee8941b563441a
DNS_SERVER=10.147.20.1

# Security Configuration
SESSION_SECRET=your-secret-key-here
CORS_ORIGIN=*.oznet

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/oznet/app.log

# SSL Configuration (if using self-signed certificates)
SSL_CERT_PATH=/etc/ssl/oznet/cert.pem
SSL_KEY_PATH=/etc/ssl/oznet/key.pem

# Database Configuration (for future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=oznet
# DB_USER=oznet
# DB_PASSWORD=your-db-password

# Email Configuration (for future use)
# SMTP_HOST=smtp.oznet
# SMTP_PORT=587
# SMTP_USER=mail@oznet
# SMTP_PASSWORD=your-email-password

# Backup Configuration (for future use)
# BACKUP_ENABLED=true
# BACKUP_PATH=/var/oznet/backups
# BACKUP_RETENTION_DAYS=30 